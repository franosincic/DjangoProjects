
{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": ".."
                  },
                  "ws": {
                     "type": "websocket"
                  },
                  "publish": {
                     "type": "publisher",
                     "realm": "realm1",
                     "role": "anonymous",
                     "options": {
                        "debug": true
                     }
                  }
               }
            }
         ] 
      },
      {
         "type": "container",
         "options": {
            "pythonpath": [".."]
         },
         "components": [
            {
               "type": "class",
               "classname": "crossbar.adapter.rest.MessageForwarder",
               "realm": "realm1",
               "extra": {
                  "subscriptions": [
                     {"url": "https://httpbin.org/post",
                      "topic": "conversation"},
                     {"url": "https://httpbin.org/post",
                      "topic": "message"},
                     {"url": "https://httpbin.org/post",
                      "topic": "post"},
                     {"url": "https://httpbin.org/post",
                      "topic": "comment"},
                     {"url": "https://httpbin.org/post",
                      "topic": "likepost"},
                     {"url": "https://httpbin.org/post",
                      "topic": "likecomment"},
                     {"url": "https://httpbin.org/post",
                      "topic": "talk"}
                  ],
                  "method": "POST",
                  "expectedcode": 200,
                  "debug": true
               },
               "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1/ws"
               }
            }
         ]
      }
   ]
}
